#!/usr/bin/env bash
set -euo pipefail

if command -v calamares >/dev/null 2>&1; then
    exec pkexec calamares
fi

if command -v archinstall >/dev/null 2>&1; then
    exec pkexec /usr/bin/env TERM="${TERM:-xterm-256color}" archinstall
fi

echo "No installer found. Please install calamares or archinstall."
exit 1
